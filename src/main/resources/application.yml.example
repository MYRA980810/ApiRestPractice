spring:
  datasource:
    url: jdbc:mysql://localhost:3306/YOUR_DB_NAME?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
    username: YOUR_DB_USER
    password: YOUR_DB_PASSWORD
    driver-class-name: com.mysql.cj.jdbc.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQLDialect
        format_sql: true

jwt:
  secret: YOUR_BASE64_SECRET_KEY_MIN_256_BITS
  expiration: 86400000 # 24 hours in milliseconds

server:
  port: 8080
